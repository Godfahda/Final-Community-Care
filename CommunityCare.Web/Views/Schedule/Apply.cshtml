@model CommunityCare.Core.Models.Schedule

@{
    ViewData["Title"] = "Apply";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Apply</h1>

<h3>Are you sure you want to Apply for this availability?</h3>
<div>
    <h4>Schedule</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduleTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ScheduleTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HomeLocation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HomeLocation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HomeName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HomeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduleNote)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ScheduleNote)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ResidentName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ResidentName)
        </dd>
    </dl>
    
    <form asp-action="ApplyConfirm">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apply" class="btn btn-success" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
