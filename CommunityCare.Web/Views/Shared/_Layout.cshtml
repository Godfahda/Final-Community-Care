<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CommunityCare.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CommunityCare.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body 
    style="background-image:url(https://media.istockphoto.com/photos/white-background-with-softly-pattern-texture-picture-id524697160?k=6&m=524697160&s=612x612&w=0&h=CK_oSUGNW4BUF8ARbpYDaJYpz0MXwZKpt6ImaPomon8=)">
    
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Community Care</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex" id="navbarNavAltMarkup">
                                       
                    <div class="navbar-nav flex-grow-1">
                        <a class="nav-link text-dark active" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        <a asp-condition=@(User.IsInRole("admin") || User.IsInRole("institution") || User.IsInRole("volunteer")) class="nav-link text-dark" asp-area="" asp-controller="Schedule" asp-action="Index">Schedule</a>
                        <a asp-condition=@(User.IsInRole("admin") || User.IsInRole("institution") || User.IsInRole("volunteer")) class="nav-link text-dark" asp-area="" asp-controller="Schedule" asp-action="ShowSearchForm">Search</a>
                        <a asp-condition=@(User.IsInRole("admin")) class="nav-link text-dark" asp area="" asp-controller="User" asp-action="Index">User Profiles</a>
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Secure">Secure</a>
                    </div>         

                    <!-- AMC The login partial is added here for authentication flex-sm-row-reverse-->
                    <partial name="_LoginPartial" />      
                    
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        
        <!-- AMC Any alert defined in controller is rendered here -->
        <partial name="_Alert" />

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Community Care - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
