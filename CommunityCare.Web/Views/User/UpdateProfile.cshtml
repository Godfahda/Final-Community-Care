@model UserProfileViewModel

<div class="card shadow p-4 mt-4">

    <h3 class="mb-3">Update Profile</h3>

    <form asp-action="UpdateProfile" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input asp-for="Id" type="hidden" />

        <div class="form-group">
            <label asp-for="Name" class="control-label"><i class="bi-person-fill"></i> Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Surname" class="control-label"><i class="bi-person-fill"></i> Surname</label>
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label"><i class="bi-person-fill"></i> PhoneNumber </label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address" class="control-label"><i class="bi-person-fill"></i> Address </label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="County" class="control-label"><i class="bi-person-fill"></i> County </label>
            <input asp-for="County" class="form-control" />
            <span asp-validation-for="County" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Email" class="control-label"><i class="bi-envelope-fill"></i> Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AccessNI" class="control-label"><i class="bi-person-fill"></i> AccessNI </label>
            <input asp-for="AccessNI" class="form-control" />
            <span asp-validation-for="AccessNI" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CompanyNumber" class="control-label"><i class="bi-person-fill"></i> CompanyNumber </label>
            <input asp-for="CompanyNumber" class="form-control" />
            <span asp-validation-for="CompanyNumber" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
